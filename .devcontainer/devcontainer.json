{
  "name": "KB Engine Playground",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/kb_engine_playground",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.extraPaths": ["/workspaces/kb_engine_playground"]
      }
    }
  },

  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt",
  "forwardPorts": [5432, 8123],
  "portsAttributes": {
    "5432": { "label": "Postgres", "onAutoForward": "silent" },
    "8123": { "label": "Agent API", "onAutoForward": "notify" }
  }
}
